              .col-md-8
                input#fname.form-control(name='name', type='name', placeholder='First Name')
            .form-group
              span.col-md-1.col-md-offset-2.text-center
                i.fa.fa-user.bigicon
              .col-md-8
                input#lname.form-control(name='name', type='name', placeholder='Last Name')
            .form-group
              span.col-md-1.col-md-offset-2.text-center
                i.fa.fa-envelope-o.bigicon
              .col-md-8
                input#email.form-control(name='email', type='email', placeholder='Email Address')
            .form-group
              span.col-md-1.col-md-offset-2.text-center
                i.fa.fa-phone-square.bigicon
              .col-md-8
                textarea#message.form-control(name='message', placeholder='Enter your massage here.', rows='7')
